<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <appender name="SYSLOG_INTERNAL" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>log</syslogHost>
        <port>514</port>
        <facility>LOCAL0</facility>
        <suffixPattern>[%15.15thread] %level %logger{36} %msg</suffixPattern>
    </appender>

    <appender name="SYSLOG" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SYSLOG_INTERNAL" />
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!--    <logger name="org.openlmis" level="DEBUG" additivity="false">-->
    <!--        <appender-ref ref="SYSLOG"/>-->
    <!--    </logger>-->

    <root level="WARN">
        <appender-ref ref="SYSLOG"/>
    </root>

</configuration>
