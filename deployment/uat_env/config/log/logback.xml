<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />

    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>log</syslogHost>
        <facility>LOCAL0</facility>
        <suffixPattern>[%15.15thread] %level %logger %msg</suffixPattern>
    </appender>

    <!-- Individual loggers will inherit the DEBUG level from root logger -->
    <logger name="org.openlmis.auth" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.cce" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.fulfillment" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.notification" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.referencedata" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.report" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.requisition" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.stockmanagement" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <logger name="org.openlmis.buq" additivity="false">
        <appender-ref ref="SYSLOG"/>
    </logger>

    <!-- Define the root logger log level to DEBUG -->
    <root level="DEBUG">
        <appender-ref ref="SYSLOG"/>
    </root>
</configuration>
